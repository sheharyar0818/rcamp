<% layout('layout/boilerplate') %> 
    
<div id="cluster-map"   > </div>
    <h1> All Campgrounds ! </h1>
    <a href="/campgrounds/new "> Add Campground </a>

    <!--changed in stylish Campground Index lec-->
<ul>
  <% for(let campground of campgrounds){ %>
    <div class="card mb-3 " >
     <div class="row" >
      <div class="col-md-4" >
        <!--- img class="image-fluid" alt="" src="<= campground.image > " --->
        <!--added in fixing our seeds lec @part 54--> 
        <!-- <img class="image-fluid"   alt="" src="<= campground.images[0].url %> " > -->

     
      <!--added in fixing our seeds bug at part 55-->
      <%if(campground.images.length) {%>
        <img class="img-fluid" alt="" src="<%=campground.images[0].url%>" crossorigin>
        <% }else {%>
        <img class="img-fluid" alt=""
            src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png"
            crossorigin>
        <% } %>
      </div>

        <div>
          <div class="col-md-8">
            <div class="card-body" >
              <h5 class="card-title"><%= campground.title %> </h5>
                <p class="card-text"><%= campground.description %>    </p> 
                <p class="card-text">
                  <small class="text-muted" ><%= campground.location %>   </small>   
                 </p> 
                 <a class="btn btn-primary" href="/campgrounds/<%= campground._id %> " >View<%= campground.title %> </a>          
            </div>
          </div>
        </div>

     </div>

    </div>
    
  <% } %> 

</ul>

